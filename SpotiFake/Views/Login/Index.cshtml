
@{
    Layout = null;
}
<html>
<head>
    <link href="~/Content/EstiloLogin.css" rel="stylesheet" />
</head>
<body>
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Iniciar sesión</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
            <div class="login-form">
                <form action="/Usuario/Ingreso" method="post">
                    <div class="sign-in-htm">
                        <div class="group">
                            <label for="user" class="label">Nombre de usuario</label>
                            <input name="correoElectronico" id="user" type="text" class="input" required>
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Contraseña</label>
                            <input name="contraseña" id="pass" type="password" class="input" data-type="password" required>

                        </div>

                        <div class="group">
                            <input id="check" type="checkbox" class="check" checked>
                            <label for="check"><span class="icon"></span> Recordar contraseña?</label>
                        </div>
                        <div class="group">
                            <input type="submit" class="button" value="Ingresar">
                        </div>

                        <div class="hr"></div>

                </form>
                <form action="/Usuario/NuevoUsuario">
                    <div class="group">
                        <input type="submit" class="button" value="Registrar Usuario">
                    </div>
                </form>
            </div>
            <div class="sign-up-htm">
            </div>
        </div>
    </div>
</body>
</html>

